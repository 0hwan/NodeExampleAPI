root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 1000

[CHANGELOG.md]
indent_size = 2

[*.js]
indent_size = 2

[*.json]
indent_size = 2
max_line_length = off

[Makefile]
max_line_length = off
